{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Pasta onde os arquivos JS serão gerados
    "rootDir": "./src"  // Pasta onde estão os arquivos TS
  },
  "include": ["src/**/*"]
}